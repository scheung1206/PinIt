<div class="col-md-8 col-md-offset-2">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= simple_form_for([@user, @album]) do |f| %>
        <%= f.error_notification %>
        <h3>New Album</h3>
        <div class="form-inputs">
          <%= f.input :title %>
        </div>
        <h3>Private</h3>
        <div class="form-inputs">
          <%= f.check_box :private%>
        </div>
        <br>
        <div class="form-actions">
          <%= f.button :submit %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
